# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME="Lege Aplicata"
ENVIRONMENT=production  # development, staging, production

# ============================================
# EXTERNAL DATABASE CONFIGURATION
# ============================================
# PostgreSQL Database (Single External Instance)
PG_HOST=92.180.25.98
PG_PORT=5433
PG_USER=your_database_user
PG_PASS=your_database_password_here
PG_DB=verdict

# Database URLs (constructed from above)
# Note: All databases use the same external PostgreSQL instance
DATABASE_URL=postgresql://${PG_USER}:${PG_PASS}@${PG_HOST}:${PG_PORT}/${PG_DB}
DATABASE_CODURI_URL=postgresql://${PG_USER}:${PG_PASS}@${PG_HOST}:${PG_PORT}/coduri_juridice
DATABASE_MODELE_URL=postgresql://${PG_USER}:${PG_PASS}@${PG_HOST}:${PG_PORT}/modele_acte

# ============================================
# OLLAMA AI SERVICE (External)
# ============================================
OLLAMA_URL=http://92.180.25.98:11434

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# Production: Use your actual domain(s)
# Development: http://localhost:5173,http://127.0.0.1:5173
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Credentials for /setari admin page
USER_SETARI=your_admin_username
PASS_SETARI=your_secure_password

# JWT Secret Key (generate a strong random key)
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_change_this_in_production

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/app/logs/backend.log

# ============================================
# PERFORMANCE & LIMITS
# ============================================
WORKERS=4  # Number of Gunicorn workers (2-4 x NUM_CORES)
MAX_CONNECTIONS=100
TIMEOUT=60

# ============================================
# FRONTEND PORT (for Docker deployment)
# ============================================
FRONTEND_PORT=8080
